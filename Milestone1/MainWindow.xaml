<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Milestone 1" Height="750" Width="750">
    <Grid Margin="0,0,0,0.8">
        <ComboBox x:Name="statelist" HorizontalAlignment="Left" Height="50" Margin="188,55,0,0" VerticalAlignment="Top" Width="250" FontSize="26" SelectionChanged="statelist_SelectionChanged"/>
        <Label Content="States" HorizontalAlignment="Left" Height="50" Margin="69,55,0,0" VerticalAlignment="Top" Width="100" FontSize="28" RenderTransformOrigin="1.048,0.505"/>
        <ComboBox x:Name="citylist" HorizontalAlignment="Left" Height="50" Margin="188,143,0,0" VerticalAlignment="Top" Width="250" FontSize="26" SelectionChanged="citylist_SelectionChanged"/>
        <Label Content="Cities" HorizontalAlignment="Left" Height="50" Margin="69,143,0,0" VerticalAlignment="Top" Width="100" FontSize="28"/>
        <DataGrid x:Name="businessGrid" Margin="30,220,30,30"/>

    </Grid>
</Window>
